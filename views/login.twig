{% extends "anonymous.twig" %}
{% block content %}
<form action="{{ path('authenticate') }}" method="post" class="form-inline" style="text-align: center">
	{% if error %}
	<div class="alert alert-error alert-block">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<h4>{{ error }}</h4>
	</div>
	{% endif %}
	<input type="text" name="_username" value="{{ last_username }}" placeholder="Login…" />
	<input type="password" name="_password" value="" placeholder="Password…" />
	<input type="submit" class="btn" value="Login" />
</form>
{% endblock %}
