{% extends "authenticated.twig" %}
{% block content %}
<h1>Users</h1>
{% if users %}
	<table class="table-bordered table-striped table-hover table-condensed" style="width: 100%">
		<caption>Users</caption>
		<thead>
			<tr><th>Username</th><th>Firstname</th><th>Lastname</th></tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr><td>{{ user.username }}</td><td>{{ user.firstname }}</td><td>{{ user.lastname }}</td></tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
{% endif %}
{% endblock %}
